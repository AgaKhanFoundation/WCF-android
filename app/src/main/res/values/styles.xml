    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/color_white_1</item>
    </style>

    <style name="Widget.WCF.Button.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WCF.Button.Secondary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_button_secondary_text</item>
        <item name="android:background">@drawable/selector_button_secondary</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WCF.Compound.Switch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">@color/primary_text_color_disabled</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">@color/color_white</item>
        <item name="android:track">@color/color_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>

    </style>

    <!--<item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>-->


    <!--legacy code-->

    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/color_overlay_color</item>
        <item name="android:colorBackground">@color/color_overlay_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">150dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
    </style>

    <style name="wcf_progressbar_horizontal_style" parent="@style/Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_bg</item>
        <!--<item name="android:backgroundTint">@color/color_progress_bg</item>-->
        <!--<item name="android:secondaryProgressTint">@color/color_progress_secondary</item>-->
        <!--<item name="android:progressBackgroundTint">@color/color_progress_primary</item>-->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MyProgressBarTwo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:progressDrawable">@drawable/progressbar_bg</item>
        <item name="android:minWidth">200dp</item>
    </style>

