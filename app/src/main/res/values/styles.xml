<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    <!--Theme.MaterialComponents.Light.Bridge">-->
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">-->

    <!-- ... -->
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.WCF.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.WCF.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.WCF.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.WCF.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.WCF.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.WCF.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.WCF.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.WCF.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.WCF.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.WCF.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.WCF.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.WCF.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.WCF.Overline</item>


    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/color_white_1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="primaryButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <!--<style name="secondaryButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">-->
    <style name="secondaryButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/selector_button_secondary_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/selector_button_secondary</item>
    </style>

    <!--legacy code-->


    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/color_overlay_color</item>
        <item name="android:colorBackground">@color/color_overlay_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">150dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:dropDownHeight">wrap_content</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
    </style>

</resources>
