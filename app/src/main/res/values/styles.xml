<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <!--Theme.MaterialComponents.Light.Bridge">-->
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">-->

    <!-- ... -->
    <!--<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_light_grey_6</item>
        <item name="colorControlActivated">@color/color_primary</item>

        <!--<item name="android:textColorPrimaryDisableOnly">@color/primary_text_color_disabled </item>-->

        <!--<item name="switchStyle">@style/Widget.MaterialComponents.Switch</item>-->

        <!-- Type styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.WCF.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.WCF.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.WCF.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.WCF.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.WCF.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.WCF.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.WCF.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.WCF.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.WCF.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.WCF.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.WCF.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.WCF.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.WCF.Overline</item>

        <item name="radioButtonStyle">@style/wcf_radiobutton_style</item>
        <item name="checkboxStyle">@style/wcf_checkbox_style</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/color_white_1</item>
    </style>

    <style name="Widget.WCF.Button.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WCF.Button.Secondary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_button_secondary_text</item>
        <item name="android:background">@drawable/selector_button_secondary</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WCF.Button.Red" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!--<item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>-->

    <style name="wcf_spinner_style"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearance.WCF.Subtitle1.Medium.Bold</item>
    </style>

    <style name="wcf_progressbar_horizontal_style" parent="@style/Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_progressbar</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="wcf_radiobutton_style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@drawable/compound_button_color_selector</item>
    </style>

    <style name="wcf_checkbox_style" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/compound_button_color_selector</item>
    </style>

</resources>

