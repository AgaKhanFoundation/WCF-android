<?xml version="1.0" encoding="utf-8"?>

<!--  SKETCH DESIGN STYLESHEET to MATERIAL DESIGN STYLE MAPPING
    34sp medium -> Headline4
    24sp medium -> Headline5
    20sp medium bold -> Headline6
    16sp regular -> Subtitle1
    16sp Medium -> Subtitle1
    14sp medium-bold -> Subtitle2
    16sp normal -> Body1
    16sp bold -> Body1.Bold
    14sp regular -> Body2
    14sp regular grey -> Body2.Dim
    12sp normal -> Caption
    12sp normal -> Overline
    14sp  -> Button
-->

<!--
Reference:
    https://github.com/material-components/material-components-android/blob/master/lib/java/com/google/android/material/typography/res/values/styles.xml
-->
<resources>

    <style name="TextAppearance.WCF.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
