<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selected_row"
    android:paddingStart="24dp"
    android:paddingTop="12dp"
    android:paddingEnd="24dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.WCF.Body1"
        app:layout_constraintEnd_toStartOf="@+id/team_member_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Team name"
        tools:text="Team name"/>

    <TextView
        android:id="@+id/team_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.WCF.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team_name"
        app:layout_constraintBaseline_toBaselineOf="@id/team_name"
        android:text="8 members"
        tools:text="8 members"/>

    <TextView
        android:id="@+id/team_lead_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.WCF.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/team_distance_unpledged_count"
        app:layout_constraintTop_toBottomOf="@id/team_name"
        android:text="Team lead name"
        tools:text="Team lead name"/>

    <TextView
        android:id="@+id/team_distance_unpledged_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.WCF.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team_lead_name"
        app:layout_constraintBaseline_toBaselineOf="@id/team_lead_name"
        android:gravity="right"
        android:text="100 miles unpledged"
        tools:text="100 miles unpledged"/>

</androidx.constraintlayout.widget.ConstraintLayout>