<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_normal"
    android:animateLayoutChanges="true"
    android:background="@color/color_white_1"
    tools:context="com.android.wcf.home.challenge.SupporterInviteFragment">


    <TextView
        android:id="@+id/supporters_invite_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/body_line_spacing_2"
        android:textAppearance="@style/TextAppearance.WCF.Subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/invite_supporters_message"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_invite_supporters"
        style="@style/Widget.WCF.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:text="@string/invite_supporters_to_pledge_label"
        android:textAppearance="?textAppearanceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supporters_invite_message" />
</androidx.constraintlayout.widget.ConstraintLayout>
