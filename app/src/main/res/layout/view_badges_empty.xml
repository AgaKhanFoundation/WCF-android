<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingStart="@dimen/spacing_big"
    android:paddingEnd="@dimen/spacing_big"
    android:paddingBottom="@dimen/spacing_extra_small">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/spacer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <TextView
        android:id="@+id/badges_card_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/badges_card_label"
        android:textAppearance="@style/TextAppearance.WCF.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/badges_empty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="start"
        android:text="@string/badges_empty_message"
        android:textAppearance="@style/TextAppearance.WCF.Subtitle1"
        android:lineSpacingMultiplier="@dimen/body_line_spacing_1"
        app:layout_constraintTop_toBottomOf="@id/badges_card_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
