<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_1"
    android:fillViewport="true"
    tools:context="com.android.wcf.home.challenge.ChallengeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/challenge_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/challenge_journey_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/journey_before_start_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/icon_journey"
                        android:layout_width="@dimen/card_image_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_art_journey" />

                    <TextView
                        android:id="@+id/journey_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:text="Journey"
                        android:textAppearance="@style/TextAppearance.WCF.Headline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_journey" />

                    <TextView
                        android:id="@+id/journey_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:contentDescription="@null"
                        android:gravity="start"
                        android:text=""
                        android:lineSpacingMultiplier="@dimen/body_line_spacing_1"
                        android:textAppearance="@style/TextAppearance.WCF.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/journey_label"
                        tools:text="Your Journey begins in 17 days on Feburary 16, 2019" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/journey_active_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/journey_card_icon_journey"
                        android:layout_width="@dimen/card_image_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_art_journey" />

                    <TextView
                        android:id="@+id/journey_card_journey_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:text="Journey"
                        android:textAppearance="@style/TextAppearance.WCF.Headline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/journey_card_icon_journey" />

                    <TextView
                        android:id="@+id/journey_card_journey_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:contentDescription="@null"
                        android:gravity="start"
                        android:text="Your journey started..."
                        android:lineSpacingMultiplier="@dimen/body_line_spacing_1"
                        android:textAppearance="@style/TextAppearance.WCF.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/journey_card_journey_label"
                        tools:text="Your Journey has started" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/challenge_participant_team_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color_white"
                android:layout_marginTop="@dimen/spacing_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_journey_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/challenge_create_or_join_team_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/icon_create_team"
                        android:layout_height="@dimen/card_image_size_2"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@null"
                        android:src="@drawable/onboard_join_team"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/need_team_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_big"
                        android:gravity="start"
                        android:text="@string/team_needed_label"
                        android:textAppearance="@style/TextAppearance.WCF.Headline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_create_team" />

                    <TextView
                        android:id="@+id/need_team_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:gravity="start"
                        android:lineSpacingMultiplier="@dimen/body_line_spacing_2"
                        android:text="@string/team_card_join_create_team_mesage"
                        android:textAppearance="@style/TextAppearance.WCF.Body1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/need_team_label"/>

                    <Button
                        android:id="@+id/show_create_team_button"
                        style="@style/Widget.WCF.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:gravity="center"
                        android:text="@string/team_card_create_team_button_text"
                        android:textAppearance="@style/TextAppearance.WCF.Button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/need_team_message" />

                    <Button
                        android:id="@+id/show_join_team_button"
                        style="@style/Widget.WCF.Button.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="@string/team_card_show_teams_to_join_button_text"
                        android:textAppearance="@style/TextAppearance.WCF.Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/show_create_team_button" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/challenge_participant_team_profile_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_normal_half"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/team_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:textAppearance="?textAppearanceHeadline6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="World walkers" />

                    <TextView
                        android:id="@+id/team_lead_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Lead"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@id/team_name"
                        app:layout_constraintTop_toBottomOf="@id/team_name" />

                    <TextView
                        android:id="@+id/team_lead_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        tools:text="Sarah Bhamani"
                        android:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/team_lead_label"
                        app:layout_constraintTop_toBottomOf="@id/team_name"
                        app:layout_constraintBaseline_toBaselineOf="@id/team_lead_label"/>

                    <TextView
                        android:id="@+id/team_size_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        tools:text="4 members"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/team_lead_label" />

                    <TextView
                        android:id="@+id/team_miles_commitment_status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:textAppearance="?textAppearanceSubtitle2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/team_size_label"
                        tools:text="3500/5000 miles committed"/>

                    <ProgressBar
                        android:id="@+id/team_miles_commitment_status_graph"
                        style="@style/wcf_progressbar_horizontal_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/progressbar_height"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/team_miles_commitment_status_label"
                        android:secondaryProgress="50"
                        android:progress="20"
                        android:max="100" />

                    <View
                        android:id="@+id/participant_committed_miles_key"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@color/color_progress_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/team_miles_commitment_status_graph" />

                    <TextView
                        android:id="@+id/participant_committed_miles_label"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:text="@string/participant_committed_miles_label"
                        app:layout_constraintStart_toEndOf="@id/participant_committed_miles_key"
                        android:layout_marginStart="@dimen/spacing_normal_half"
                        app:layout_constraintTop_toTopOf="@id/participant_committed_miles_key"
                    app:layout_constraintBottom_toBottomOf="@id/participant_committed_miles_key" />

                    <TextView
                        android:id="@+id/participant_committed_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textAppearance="?textAppearanceSubtitle2"
                        tools:text="5,000"
                        app:layout_constraintStart_toEndOf="@id/participant_committed_miles_label"
                        app:layout_constraintEnd_toStartOf="@id/participant_committed_miles_edit"
                        android:layout_marginStart="@dimen/spacing_normal_half"
                        android:layout_marginEnd="@dimen/spacing_normal_half"
                        app:layout_constraintBaseline_toBaselineOf="@id/participant_committed_miles_label"
                        />

                    <TextView
                        android:id="@+id/participant_committed_miles_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceSubtitle2"
                        android:text="Edit"
                        android:textColor="@color/color_light_blue_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/spacing_normal_half"
                        app:layout_constraintBaseline_toBaselineOf="@id/participant_committed_miles_label"
                        />

                    <View
                        android:id="@+id/team_committed_miles_key"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@color/color_progress_secondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/participant_committed_miles_key" />

                    <TextView
                        android:id="@+id/team_committed_miles_label"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:text="@string/team_committed_miles_label"
                        app:layout_constraintStart_toEndOf="@id/team_committed_miles_key"
                        android:layout_marginStart="@dimen/spacing_normal_half"
                        app:layout_constraintTop_toTopOf="@id/team_committed_miles_key"
                        app:layout_constraintBottom_toBottomOf="@id/team_committed_miles_key" />

                    <TextView
                        android:id="@+id/team_committed_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textAppearance="?textAppearanceSubtitle2"
                        tools:text="25000"
                        app:layout_constraintEnd_toEndOf="@id/participant_committed_miles"
                        app:layout_constraintBaseline_toBaselineOf="@id/team_committed_miles_label" />

                    <View
                        android:id="@+id/remaining_goal_miles_key"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:background="@color/color_progress_bg"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/team_committed_miles_key" />

                    <TextView
                        android:id="@+id/remaining_goal_miles_label"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceSubtitle1"
                        android:text="@string/remaining_goal_miles_label"
                        app:layout_constraintStart_toEndOf="@id/remaining_goal_miles_key"
                        android:layout_marginStart="@dimen/spacing_normal_half"
                        app:layout_constraintTop_toTopOf="@id/remaining_goal_miles_key"
                        app:layout_constraintBottom_toBottomOf="@id/remaining_goal_miles_key" />

                    <TextView
                        android:id="@+id/remaining_goal_miles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textAppearance="?textAppearanceSubtitle2"
                        tools:text="55000"
                        app:layout_constraintEnd_toEndOf="@id/participant_committed_miles"
                        app:layout_constraintBaseline_toBaselineOf="@id/remaining_goal_miles_label" />

                    <View
                        android:id="@+id/seperator_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:background="@color/color_light_grey_3"
                        app:layout_constraintTop_toBottomOf="@id/remaining_goal_miles_key" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/team_commitment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator_1">

                        <ImageView
                            android:id="@+id/navigate_team_commitment_breakdown"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/min_button_height"
                            android:gravity="right"
                            android:src="@drawable/ic_chevron_right_blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/team_commitment_label"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/spacing_normal_half"
                            android:gravity="start|center"
                            android:text="View Breakdown"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="@color/color_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/navigate_team_commitment_breakdown"
                            app:layout_constraintBottom_toBottomOf="@id/navigate_team_commitment_breakdown"
                            app:layout_constraintTop_toTopOf="@id/navigate_team_commitment_breakdown" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/challenge_team_invite_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_participant_team_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/challenge_team_invite_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/icon_invite_to_team"
                        android:layout_height="@dimen/card_image_size"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_art_girlrunning" />

                    <TextView
                        android:id="@+id/invite_team_members_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/challenge_invite_team_members_label"
                        android:textAppearance="@style/TextAppearance.WCF.Headline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_invite_to_team" />

                    <TextView
                        android:id="@+id/invite_team_members_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:contentDescription="@null"
                        android:gravity="start"
                        android:lineSpacingMultiplier="@dimen/body_line_spacing_2"
                        tools:text="@string/challenge_invite_team_members_message"
                        android:textAppearance="@style/TextAppearance.WCF.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/invite_team_members_title" />

                    <View
                        android:id="@+id/seperator_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:background="@color/color_light_grey_3"
                        app:layout_constraintTop_toBottomOf="@id/invite_team_members_message" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/challenge_team_invite_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator_2">

                        <ImageView
                            android:id="@+id/team_invite_chevron"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/min_button_height"
                            android:gravity="right"
                            android:src="@drawable/ic_chevron_right_blue"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/team_invite_label"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="@dimen/spacing_normal_half"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:gravity="start|center"
                            android:textColor="@color/color_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/team_invite_chevron"
                            app:layout_constraintBottom_toBottomOf="@id/team_invite_chevron"
                            app:layout_constraintTop_toTopOf="@id/team_invite_chevron"
                            tools:text="Invite 4 new team members" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/challenge_fundraising_progress_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/challenge_team_invite_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fundraising_progress_before_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_normal">

                    <ImageView
                        android:id="@+id/icon_invite_to_support"
                        android:layout_height="@dimen/card_image_size"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_art_fundraise" />

                    <TextView
                        android:id="@+id/fundraising_progress_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_fundraising_progress_card_label"
                        android:textAppearance="@style/TextAppearance.WCF.Headline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/icon_invite_to_support" />

                    <TextView
                        android:id="@+id/fundraising_message_before_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:contentDescription="@null"
                        android:gravity="start"
                        android:lineSpacingMultiplier="@dimen/body_line_spacing_1"
                        android:text="@string/challenge_fundraising_progress_before_start_message"
                        android:textAppearance="@style/TextAppearance.WCF.Body1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fundraising_progress_label" />

                    <View
                        android:id="@+id/seperator_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        android:background="@color/color_light_grey_3"
                        app:layout_constraintTop_toBottomOf="@id/fundraising_message_before_start" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fundraising_invite_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal_half"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/seperator_3">

                        <ImageView
                            android:id="@+id/fundraising_invite_button"
                            android:layout_width="wrap_content"
