<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeMyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.wcf.utils.CircleImageView
                    android:id="@+id/imageMyProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_contact" />

                <TextView
                    android:id="@+id/textMyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageMyProfile"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Natasha Patel"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textTeamName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textMyName"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Walk4Change"
                    android:textColor="@color/grey"
                    android:textSize="18sp" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spinnerSorting"
                style="@style/spinner_style"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/relativeMyProfile"
                android:layout_marginTop="30dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/sorting"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:id="@+id/linearMoneyMilesMilestone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerSorting"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="90">

                <RelativeLayout
                    android:id="@+id/relativeDollars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="30">

                    <TextView
                        android:id="@+id/textTeamMoneyCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="@color/green"
                        android:textSize="45sp" />

                    <TextView
                        android:id="@+id/textTeamMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/textTeamMoneyCurrency"
                        android:text="2073.30"
                        android:textColor="@android:color/black"
                        android:textSize="22sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeMiles"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="30">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circleprog_myteam_miles_bg" />

                    <ProgressBar
                        android:id="@+id/progressBarMyTeamMiles"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="80"
                        android:progressDrawable="@drawable/circleprog_myteam_miles_fg"
                        android:rotation="-90" />

                    <TextView
                        android:id="@+id/textCurrentMiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="375"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textOutofMiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textCurrentMiles"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="out of\n500 miles"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    android:gravity="top|center_horizontal">

                    <ImageView
                        android:id="@+id/imageDaysCount"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:background="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/textDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageDaysCount"
                        android:gravity="center"
                        android:text="34"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textMilestone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textDays"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageDaysCount"
                        android:gravity="center"
                        android:text="days"
                        android:textColor="@color/grey"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textCurrentSupporters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearMoneyMilesMilestone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/currentsupporters"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textCurrentSupportersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearMoneyMilesMilestone"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/textCurrentSupporters"
                android:text="(11)"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relativeCurrentSupportersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCurrentSupporters">

                <LinearLayout
                    android:id="@+id/linearFirstuser"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textNameFirstUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="75"
                        android:text="Jenny Fields"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/relativeFirstUserMoneyPledged"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="25"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textCurrentMoneyFirstUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$75"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textPledgedFirstUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textCurrentMoneyFirstUser"
                            android:text="Pledged $100"
                            android:textColor="@color/grey"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSecondUser"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/linearFirstuser"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/textNameSecondUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="75"
                        android:text="Suleman Kheraj"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/relativeSecondUserMoneyPledged"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="25">

                        <TextView
                            android:id="@+id/textCurrentMoneySecondUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$60"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textPledgedSecondUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textCurrentMoneySecondUser"
                            android:text="Pledged $80"
                            android:textColor="@color/grey"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textCurrentSupporterSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/linearSecondUser"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawableTint="@color/green"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="See More"
                    android:textColor="@color/green"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textPastEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeCurrentSupportersList"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/pastevents"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPastEventsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeCurrentSupportersList"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/textPastEvents"
                android:text="(4)"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relativePastEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPastEventsCount">

                <RelativeLayout
                    android:id="@+id/relativeFirstPastEvent"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp">

                    <ImageView
                        android:id="@+id/imageFirstEventName"
                        android:layout_width="110dp"
                        android:layout_height="130dp"
                        android:layout_alignParentStart="true"
                        android:background="@mipmap/ic_launcher" />

                    <RelativeLayout
                        android:id="@+id/relativeFirstEventandDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageFirstEventName">

                        <TextView
                            android:id="@+id/textFirstEventName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="AKF Walk Los Angeles"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textFirstEventMonthYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textFirstEventName"
                            android:text="November 2016"
                            android:textColor="@color/grey"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageFirstEventName">

                        <RelativeLayout
                            android:id="@+id/relativeFirstTeamName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/relativeFirstMoneyMiles">

                            <TextView
                                android:id="@+id/textFirstTeamNameHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Team: "
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textFirstPastEventTeamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textFirstTeamNameHeading"
                                android:text="AKF Ambassadors"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeFirstMoneyMiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/textFirstMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$500"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <View
                                android:id="@+id/viewFirstMoneyMiles"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textFirstMoney"
                                android:layout_alignTop="@+id/textFirstMoney"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_toRightOf="@+id/textFirstMoney"
                                android:background="@android:color/black" />

                            <TextView
                                android:id="@+id/textFirstMiles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/viewFirstMoneyMiles"
                                android:text="300 miles"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeSecondPastEvent"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/relativeFirstPastEvent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imageSecondEventName"
                        android:layout_width="110dp"
                        android:layout_height="130dp"
                        android:layout_alignParentStart="true"
                        android:background="@mipmap/ic_launcher" />

                    <RelativeLayout
                        android:id="@+id/relativeSecondEventandDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageSecondEventName">

                        <TextView
                            android:id="@+id/textSecondEventName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="Silicon Valley Walk/Run"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textSecondEventMonthYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textSecondEventName"
                            android:text="October 2016"
                            android:textColor="@color/grey"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/imageSecondEventName">

                        <RelativeLayout
                            android:id="@+id/relativeSecondTeamName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/relativeSecondMoneyMiles">

                            <TextView
                                android:id="@+id/textSecondTeamNameHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Team: "
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textSecondPastEventTeamName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/textSecondTeamNameHeading"
                                android:text="AKF Ambassadors"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeSecondMoneyMiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/textSecondMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$500"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <View
                                android:id="@+id/viewSecondMoneyMiles"
                                android:layout_width="1dp"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/textSecondMoney"
                                android:layout_alignTop="@+id/textSecondMoney"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_toRightOf="@+id/textSecondMoney"
                                android:background="@android:color/black" />

                            <TextView
                                android:id="@+id/textSecondMiles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/viewSecondMoneyMiles"
                                android:text="300 miles"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textPastEventsSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/relativeSecondPastEvent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:drawableEnd="@drawable/right_arrow"
                    android:drawableTint="@color/green"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="See More"
                    android:textColor="@color/green"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>