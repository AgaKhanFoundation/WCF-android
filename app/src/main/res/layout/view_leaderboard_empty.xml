<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingStart="@dimen/spacing_big"
    android:paddingEnd="@dimen/spacing_big"
    android:paddingBottom="@dimen/spacing_extra_small">

    <TextView
        android:id="@+id/refresh_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center"
        android:text="Leaderboard data not available"
        android:textAppearance="@style/TextAppearance.WCF.Headline6"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/refresh_leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/refresh_leaderboard"
        style="@style/Widget.WCF.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Refresh"
        android:textAppearance="@style/TextAppearance.WCF.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
