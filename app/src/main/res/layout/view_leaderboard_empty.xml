<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingStart="@dimen/spacing_big"
    android:paddingEnd="@dimen/spacing_big"
    android:paddingBottom="@dimen/spacing_extra_small">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/spacer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <ImageView
        android:id="@+id/leaderboard_image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_tab_leaderboard"
        app:layout_constraintTop_toBottomOf="@id/spacer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/leaderboard_empty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:gravity="center"
        android:text="@string/leaderboard_empty_message"
        android:textAppearance="@style/TextAppearance.WCF.Subtitle1"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
