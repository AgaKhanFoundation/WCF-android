<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_1"
    android:animateLayoutChanges="true"
    tools:context="com.android.wcf.home.Campaign.CampaignFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/teams_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/join_team_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/join_team_button"
            style="@style/primaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="18dp"
            android:elevation="2dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:text="@string/team_card_join_team_button_text"
            android:textAppearance="@style/TextAppearance.WCF.Button"
            app:layout_constraintBottom_toTopOf="@+id/cancel_join_team_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teams_list" />

        <Button
            android:id="@+id/cancel_join_team_button"
            style="@style/secondaryButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="18dp"
            android:elevation="2dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:text="@string/team_card_cancel_button_text"
            android:textAppearance="@style/TextAppearance.WCF.Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_team_button" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>