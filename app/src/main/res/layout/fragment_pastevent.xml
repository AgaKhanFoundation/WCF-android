<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textThanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Through your participation in 4 events, you raised $1500 and walked 100miles!"
                android:textColor="@color/color_grey"
                android:textSize="18sp" />

            <com.android.wcf.utils.ExpandedListView
                android:id="@+id/listPastEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textThanks"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:clickable="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>